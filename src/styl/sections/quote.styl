.quote
  background-image url("../img/backgrounds/bg-quote.jpg")
  background-position center
  background-repeat no-repeat
  background-size cover
  padding 172px 0 122px 0

  &-title
    &-container
      margin-bottom 43px

      & h1
        color $white

  &-form
    align-items center
    background-color $white
    display flex
    flex-direction column
    padding 40px 0 66px 0

    &-container
      margin 0 auto
      width 610px

.select {
  margin-top 60px;
  position: relative;
  width: 412px;
}

.select-text {
  color: $blackInputs;
  position: relative;
  background-color: transparent;
  width: 412px;
  padding: 10px 10px 10px 0;
  font-size: 18px;
  letter-spacing: -0.2px;
  border-radius: 0;
  border: none;
  border-bottom: 1px solid $grayLabels;
}

/* Remove focus */
.select-text:focus {
  outline: none;
  border-bottom: 1px solid rgba(0,0,0, 0);
}

  /* Use custom arrow */
.select .select-text {
  appearance: none;
  -webkit-appearance:none
}

.select:after {
  left: 65px;
  position: absolute;
  top: 22px;
  width: 0;
  height: 0;
  padding: 0;
  content: '';
  border-left: 4px solid transparent;
  border-right: 4px solid transparent;
  border-top: 4px solid rgba(0, 0, 0, 0.12);
  pointer-events: none;
}


/* LABEL ======================================= */
.select-label {
  color: $grayLabels;
  font-size: 14px;
  position: absolute;
  pointer-events: none;
  left: 0;
  top: 17px;
  transition: 0.3s ease all;
}

/* active state */
.select-text:focus ~ .select-label, .select-text:valid ~ .select-label {
  color: $blueKing;
  top: -20px;
  transition: 0.3s ease all;
  font-size: 12px;
}

.select-text:focus ~ .select-label, .select-text:valid ~ .select-label {
  color: $blueKing;
  top: -20px;
  transition: 0.3s ease all;
  font-size: 12px;
}

/* BOTTOM BARS ================================= */
.select-bar {
  position: relative;
  display: block;
  width: 412px;
}

.select-bar:before, .select-bar:after {
  content: '';
  height: 1px;
  width: 0;
  bottom: 1px;
  position: absolute;
  background: $blueKing;
  transition: 0.3s ease all;
}

.select-bar:before {
  left: 50%;
}

.select-bar:after {
  right: 50%;
}

/* active state */
.select-text:focus ~ .select-bar:before, .select-text:focus ~ .select-bar:after {
  width: 50%;
}

/* HIGHLIGHTER ================================== */
.select-highlight {
  position: absolute;
  height: 60%;
  width: 100px;
  top: 25%;
  left: 0;
  pointer-events: none;
  opacity: 0.5;
}

@media screen and (max-width 970px)
  .select,
  .select-text,
  .select-bar
    width 250px

@media screen and (max-width 660px)
  .quote
    &-form
      &-container
        width 380px

@media screen and (max-width 430px)
  .quote
    &-title
      &-container
        margin-left calc(50% - 125px)
    &-form
      &-container
        width 100%

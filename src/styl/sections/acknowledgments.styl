.acknow
  margin 107px 0 15px 0

  &-title
    &-container
      & h1
        color $white

  &-banner
    background-image url("../img/backgrounds/bg-acknowledgments.jpg")
    background-position center
    background-repeat no-repeat
    background-size cover
    height 272px
    position relative

    &-content
      left 0
      margin 0 auto
      position absolute
      right 0
      top 98px
      width 944px

      &-top
        align-items center
        display flex
        flex-direction row
        justify-content space-between
        margin-bottom 66px

    &-card
      background-color #f1f1f1
      height 210px
      padding 36px 26px 0 0
      width 286px

      &:nth-child(2)
        margin 0 43px

      &-container
       display flex
       flex-wrap wrap

      &-year
        color $blackLight
        font-size 23px
        letter-spacing -0.2px
        margin-left 30px

      &-info
        display flex
        flex-direction row
        margin-top 40px

      &-description
        color $gray
        font-size 13px
        letter-spacing -0.1px
        line-height 24px

    &-line
      background-color #466fb0
      height 1px
      margin 12px 25px 0 0
      position relative
      width 100px

    &-point
      background-color #466fb0
      border-radius 100px
      bottom 0
      height 5px
      margin auto 0
      position absolute
      right -5px
      top 0
      width 5px

    &-logo
      height 32px
      width 93px

      &-container
        height 32px

  &-big
    &-logo
      height 251px
      width 727px

      &-container
        display flex
        justify-content flex-end
        margin-top 199px

@media screen and (min-width 660px) and (max-width 990px)
  .acknow
    &-banner
      &-content
        width 615px

      &-card
        &:nth-child(2)
          margin 0

        &:nth-child(1)
          margin 0 43px 43px 0

    &-big
      &-logo
        height 210px
        width 618px

        &-container
          margin-top 460px

@media screen and (max-width 768px)
  .acknow
    margin 70px 0 60px 0

@media screen and (max-width 659px)
  .acknow
    &-title
      &-container
        margin-bottom 30px

    &-banner
      &-content
        top 55px
        width 286px

        &-top
          flex-direction column

      &-card
        &:nth-child(2)
          margin 43px 0

        &:nth-child(1)
          margin 0

    &-big
      &-logo
        height 100%
        width 100%

        &-container
          margin 720px 30px 0 30px

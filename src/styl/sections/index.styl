.home
  &-cover
    background-position center
    background-repeat no-repeat
    background-size cover
    height 740px
    padding 215px 0 0 208px

    &-info
      max-width 522px

    &-subtitle
      &-container
        margin 0 0 54px 0

      &-container h2
        letter-spacing 0.5px

    &-arrow
      height 31px
      width 13px !important

      &-container
        margin-top 80px

  &-solutions
    background-image url("../img/backgrounds/bg-home-solutions.jpg")
    background-position center
    background-repeat no-repeat
    background-size cover
    display flex
    flex-direction row
    height 496px
    padding-top 40px
    padding-left 142px

    &-button
      &-desktop
        display block

      &-mobile
        display none

    &-title
      &-container
        margin-bottom 50px
        max-width 317px

    &-info
      &-container
        display flex
        flex-wrap wrap
        margin 12px 0 0 0
        height 274px
        width 413px

      &-content
        width 170px

        &:nth-child(odd)
          margin-right 60px

        &:nth-child(-n + 2)
          margin-bottom 0

    &-icon
      &-container
        align-items center
        display flex
        height 51px
        margin-bottom 9px

      &-renovation
        height 47px
        width 53px

      &-extension
        height 51px
        width 39px

      &-instalation
        height 41px
        width 41px

      &-warranty
        height 47px
        width 41px

  &-clients
    align-items center
    display flex
    height 131px

    &-carousel
      margin 0 auto
      position relative
      width 1180px

      & .owl-stage
        display flex

      & .owl-item
        align-items center
        display flex
        justify-content center

      & .owl-nav
        .owl-prev,
        .owl-next
          bottom 0
          height 16px
          margin auto 0
          position absolute
          top 0

        .owl-prev
          left -34px

        .owl-next
          right -34px

        .navigation-icon
          height 16px
          width 10px

    &-logo
      display flex
      justify-content center
      width 236px

      &-dell
        height 32px
        width 188px !important

      &-touch
        height 28px
        width 145px !important

      &-ricoh
        height 26.25px
        width 140px !important

      &-ford
        height 47.69px
        width 125px !important

      &-egs
        height 40.13px
        width 158px !important

      &-cyg
        height 54.52px
        width 160px !important

      &-fecolfin
        height 58.34px
        width 134px !important

      &-quick
        height 37.47px
        width 120px !important

  &-location
    background-image url("../img/backgrounds/donde-estamos-fondo.jpg")
    background-position top left
    background-repeat no-repeat
    background-size cover
    display flex
    flex-direction row
    height 657px
    justify-content center
    // margin-top -31px
    padding 124px 0 0 0
    position relative

    &:before
      content ""
      background-image url("../img/backgrounds/donde-estamos-personas.png")
      background-position bottom left
      background-repeat no-repeat
      background-size contain
      height 104%
      position absolute
      bottom 0
      left 3%
      width 38%

    &-info
      margin-bottom 50px

      &-container
        display flex
        justify-content flex-end
        padding-right 57px
        width 914.8px

    &-points
      &-container
        display flex
        flex-direction row
        margin-bottom 25px

    &-icon
      height 21px
      width 15px

      &-container
        margin-right 21px

    &-button
      &-container
        margin-top 59px

        & button
          background-color $blueStrong
          transition 0.3s

        & button:hover
          background-color $blue
          transition 0.3s

  &-service
    background-image url("../img/backgrounds/bg-home-technical-service.png")
    background-position bottom
    background-repeat no-repeat
    background-size cover
    height auto

    &-title
      &-container
        margin-top 164px
        max-width 305px

    &-content
      display flex
      flex-direction row
      margin-left 14%

    &-iframe
      display flex
      justify-content center
      margin 200px 0 100px 0

    &-contact
      &-container
        background-image url("../img/backgrounds/bg-home-contact-us.jpg")
        background-position bottom
        background-repeat no-repeat
        background-size cover
        display flex
        flex-direction column
        height 220px
        justify-content center
        margin 48px 0 0 140px
        padding-left 65px
        width 332px

      &-title
        &-container
          margin-bottom 30px

    &-goforms
      display flex
      flex-direction row
      margin 126px 0 0 120px

      &-content
        background-color $grayStrong
        height 304px
        padding 35px 0 0 43px
        width 274px

      &-content:nth-child(1)
        margin 110px 153px 0 0

      &-content a button
        height 40px
        padding 0 30px

    &-icon
      height 25px
      width 38px

      &-container
        margin-bottom 20px

    &-subtitle
      color $blackLight
      letter-spacing -0.1px

    &-paragraph
      &-container
        margin 10px 0 35px 0
        max-width 164px

        & p
          color $gray
          letter-spacing -0.1px
          line-height 21px

.cover
  &-one
    background-image url("../img/backgrounds/bg-home-cover-one.jpg")

  &-two
    background-image url("../img/backgrounds/bg-home-cover-two.jpg")

  &-three
    background-image url("../img/backgrounds/bg-home-cover-three-v2.jpg")

  &-four
    background-image url("../img/backgrounds/bg-home-cover-four.jpg")

  &-five
    background-image url("../img/backgrounds/bg-home-cover-five.jpg")

.owl-dots
  bottom 73px
  pointer-events none
  position absolute
  right 73px

.owl-dot
  border-radius 100px
  background-color #d8d8d8 !important
  height 8px
  margin 0 5px
  pointer-events none
  width 8px

.owl-dot.active
  background-color transparent !important
  border solid 1px $white !important

@media screen and (min-width 1940px)
  .home
    &-location
      margin-top -60px

////////////////////////////////////////
// MEDIA QUERIES FOR THE LOGOS CAROUSEL
////////////////////////////////////////

@media screen and (max-width 1290px)
  .home
    &-clients
      &-carousel
        width 944px

@media screen and (max-width 1060px)
  .home
    &-clients
      &-carousel
        width 708px

@media screen and (max-width 840px)
  .home
    &-clients
      &-carousel
        width 472px

@media screen and (max-width 580px)
  .home
    &-clients
      &-carousel
        width 236px

////////////////////////////////////////
// END SECTION
////////////////////////////////////////

@media screen and (min-width 860px) and (max-width 1130px)
  .home
    &-cover
      padding-left 60px

    &-solutions
      &-info
        &-container
          margin 12px 0 0 0

    &-clients
      &-logos
        &-container
          margin-left 60px

    &-location
      padding-right 10%

    &-service
      &-content
        justify-content center
        margin-left 0

      &-goforms
        margin-left 60px

        &-content
          &:nth-child(1)
            margin-right 70px

@media screen and (max-width 940px)
  .home
    &-location
      background-position top right
      height auto
      justify-content center
      padding 70px 0

      &:before
        content unset

      &-info
        &-container
          justify-content center
          padding-right 0
          width 100%

@media screen and (max-width 859px)
  .home
    &-cover
      height 400px
      padding 100px 30px 0 30px

      &-subtitle
        &-container
          margin-bottom 30px

      &-arrow
        &-container
          margin-top 30px

    &-solutions
      align-items center
      flex-direction column
      height auto
      padding 40px 30px

      &-button
        &-desktop
          display none

        &-mobile
          display block
          margin-top 40px

          &-container
            display flex
            justify-content flex-start
            width 100%

      &-title
        &-container
          max-width initial

      &-info
        &-content
          width 140px

        &-content
          margin 10px !important

    &-clients
      align-items center
      flex-direction column
      height auto
      padding 50px 30px 60px 30px

      &-info
        &-container
          max-width 408px

      &-logos
        &-container
          height auto
          justify-content space-between
          margin 15px 0 35px 0
          max-width 318px
          width 100%

      &-logo
        &-content
          width 50%

          &:nth-child(odd)
            margin-right 0

          &:nth-child(even)
            display flex
            justify-content flex-end

          &:nth-child(2) img
            margin-right 16px

    &-service
      &-iframe
        display block
        margin 130px auto 100px auto
        overflow auto
        width 260px

      &-content
        align-items center
        flex-direction column
        margin-left 0
        padding 0 30px

      &-title
        &-container
          margin-top 50px
          max-width 100%

      &-goforms
        flex-direction column
        margin 0

        &-content
          &:nth-child(1)
            margin 50px 0

      &-contact
        &-container
          margin-left 30px
          padding-left 33px
          width 270px

  .owl-dots
    bottom 25px
    right 30px

@media screen and (min-width 769px) and (max-width 859px)
  .home
    &-clients
      &-logos
        &-container
          max-width 406px

@media screen and (max-width 433px)
  .home
    &-solutions
      background-position center right 38%

      &-info
        &-container
          width 100%

        &-content
          margin 0 0 30px 0 !important
          width 50%

          & span
            font-size 12px

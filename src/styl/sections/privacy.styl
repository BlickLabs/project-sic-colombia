.privacy
  margin 180px 10% 100px 10%

  & h1, section h2, p, ul
    color $gray
    letter-spacing 0.2px
    line-height 29px
    margin-bottom 15px

  & h1
    font-size 24px

  & h2
    font-size 18px

  & p, ul
    font-size 15px
    text-align justify

@media screen and (max-width 768px)
  .privacy
    margin-top 120px

    & h1
      font-size 18px

    & h2
      font-size 15px

    & p, ul
      font-size 13px
      line-height 22px
